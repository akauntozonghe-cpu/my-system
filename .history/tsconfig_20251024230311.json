{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],             // src/lib 以下
      "@context/*": ["context/*"],     // src/context 以下
      "@hooks/*": ["hooks/*"],         // src/hooks 以下
      "@components/*": ["components/*"], // src/components 以下（必要なら）
      "@app/*": ["app/*"],             // src/app 以下
      "@/*": ["*"]                     // src 配下をルートとして参照
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}unn

